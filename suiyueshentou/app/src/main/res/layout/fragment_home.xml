<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@mipmap/bg_action_bar"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="12dp"
        android:text="生活处处是惊喜"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/tv_title"
        android:layout_marginRight="6dp"
        android:padding="10dp"
        android:src="@mipmap/ic_settings" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="openMSGList"
        android:scaleType="centerInside"
        android:src="@mipmap/github" />

    <TextView
        android:id="@+id/tv_more_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:clickable="true"
        android:gravity="center"
        android:onClick="openMSGList"
        android:text="消息列表"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2196f3" />

    <TextView
        android:id="@+id/bt_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="不会用?点击这里,查看帮助!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2196f3"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_accessible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_screen"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_wx"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/shape_circle"
            android:padding="10dp"
            android:text="@string/wx_set"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bt_qq"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/shape_circle"
            android:padding="10dp"
            android:text="@string/qq_set"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <Button

        android:id="@+id/bt_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_more_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/btn_orange"
        android:text="开启屏幕常亮"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp12" />


</RelativeLayout>
